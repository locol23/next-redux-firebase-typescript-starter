{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "outDir": "../../dist/functions"
  },
  "include": ["./*", "./**/*"],
  "compileOnSave": true
}
